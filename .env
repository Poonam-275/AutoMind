# AutoMind Environment Variables
# Copy this file to .env and fill in your actual API keys

# Server Configuration
PORT=3000
NODE_ENV=development

# Google Maps API (Required for live traffic and routing)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# HERE API (Alternative routing service)
HERE_API_KEY=your_here_api_key_here

# Database Configuration (if using MongoDB)
MONGODB_URI=mongodb://localhost:27017/automind
DB_NAME=automind

# JWT Secret for authentication (if implementing user accounts)
JWT_SECRET=your_super_secure_jwt_secret_here

# External APIs
FUEL_PRICE_API_KEY=your_fuel_price_api_key
WEATHER_API_KEY=your_weather_api_key

# Email Configuration (for notifications)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379

# Analytics
GOOGLE_ANALYTICS_ID=your_ga_id_here

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/automind.log